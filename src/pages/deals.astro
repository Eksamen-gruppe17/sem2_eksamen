---
import Card from "../components/card.astro";
import "../styles/style.css";
import Mainlayout from "../layouts/mainlayout.astro";
import Menu from "../components/Menu.astro";
---

<Mainlayout>
  <div class="hero">
    <img id="heroimg" src="imgs/hero_deal.webp" alt="">
    <h1 class="tekst">Discover the best <span class="bold">deals, venues</span> and <span class="bold">events</span> near you</h1>
    <img id="pil" src="imgs/pil1.svg" alt="">
  </div>
  <Menu />
  <h2>Deals</h2>
  <div class="flex">
    <Card />
    <Card />
    <Card />
  </div>
</Mainlayout>

<style>
body {
  background-color: #161616;
}

     img {
    max-width: 100%;
    border-radius: 30px;
  }

    .hero {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-row: 1fr 1fr 1fr;
    margin: 2rem 2rem 10rem 2rem;
    align-items: center;
  }

  #pil {
    grid-column: 1 / 3;
    grid-row: 2 / 3;
    width: 50%;
    justify-self: center;
  }

  #heroimg {
    grid-column: 2 / 4;
    grid-row: 1 / 3;
  }  

 .tekst {
    grid-column: 1 / 3;
    grid-row: 1 / 2;
    color: white;
    font-family: degular-display;
    font-weight: 100;
    font-size: 50px;
    line-height: 2.8rem;
    width: 13ch;
  }

    .bold {
    font-weight: 600;
  }

  h2 {
    display: flex;
justify-content: center;
margin-top: 5rem;
  font-size: 64px;
  font-family: "degular";
  font-style: normal;
  color: white;
}
  .flex {
display: flex;
flex-wrap: wrap;
justify-content: center;
  }


  @media screen and (min-width: 800px) {
      img {
    max-width: 100%;
    border-radius: 30px;
  }
  
  
  .bold {
    font-weight: 600;
  }
  
  .hero {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    grid-row: 1fr;
    margin: 5rem 10rem 10rem 10rem;
    gap: 25px;
  }
  .tekst {
    grid-column: 1 / 4;
    grid-row: 1 / 2;
    color: white;
    font-family: degular-display;
    font-weight: 400;
    font-size: 80px;
    line-height: 4.2rem;
    width: 17ch;
    justify-self: center;
  }
  #pil {
    grid-column: 2 / 3;
    grid-row: 1 / 2;
    width: 60%;
    justify-self: end;
    align-self: flex-end;
  }

  #heroimg {
    grid-column: 3 / 5;
    grid-row: 1 / 2;
  }  
h2 {
  font-size: 64px;
  font-family: "degular";
  font-style: normal;
  color: white;
}
  .flex {
    display: flex;
    justify-content: center;
    margin-bottom: 10rem;
  }
  body {
    background-color: #161616;
  }
  }
</style>