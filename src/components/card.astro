---
const { title } = Astro.props;
const { address } = Astro.props;
const { date_time } = Astro.props;
import "../styles/style.css";
import Button from "../components/button.astro";
---

<div class="card">
  <h1>Card</h1>
  <img src="" alt="" style="" />
  <div class="container">
    <h4>{title}</h4>
    <p>{address}</p>
    <p>{date_time}</p>
    <Button variant="lilla_btn">More Info</Button>
  </div>
</div>

<style>
  .card {
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    transition: 0.3s;
    border-radius: 5px;
  }
  img {
    width: 100%;
    border-radius: 5px 5px 0 0;
  }
  .lilla_btn {
    background-color: rgb(117, 78, 242);
    color: white;
  }
  .lilla_btn:hover {
    background-color: none;
  }
</style>
