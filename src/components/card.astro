---
const { title } = Astro.props;
const { address } = Astro.props;
const { date_time } = Astro.props;
const { img } = Astro.props;
import "../styles/style.css";
import Button from "./button.astro";
---

<div class="card">
  <!-- <div class="tilbud"><h4>Tilbud</h4></div> -->
  <div class="tilbud"><h4>{title}</h4></div>
  <!-- <img src="" alt=""/> -->
  <div class="container">
    <div class="tekst">
      <!-- <h4>Title</h4>
      <p>Address</p>
      <p>Date_time</p> -->
      <h4>{title}</h4>
      <p>{address}</p>
      <p>{date_time}</p>
    </div>
    <Button variant="lilla_btn">More Info</Button>
  </div>
</div>

<style>

  .card {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr;
    width: 400px;
    height: 400px;
    background-image: url("imgs/oel1_deal.webp");
    background-size: cover;
    border-radius: 30px;
    margin: 2rem;
  }

    .container {
    min-height: 100px;
    padding: 1rem;
    display: flex;
    flex-direction: row;
    align-items: flex-end;
    justify-content: space-between;
    align-self: flex-end;
  }

    .tilbud {
    padding-top: 2rem;
    justify-self: center;
        grid-column: 1 / 3;
    grid-row: 1 / 2;
    font-family: switzer;
    color: white;
  }

  .tekst {
    font-family: switzer;
    color: white;
  }
  h4 {
  font-size: 26px;
}

p {
  font-size: 16px;
}

@media screen and (min-width: 800px) {
    img {
    max-width: 100%;
  }
  .card {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr 1fr;
    width: 400px;
    height: 400px;
    background-image: url("imgs/oel1_deal.webp");
    background-size: cover;
    border-radius: 30px;
  }

  .container {
    min-height: 100px;
    grid-column: 1 / 3;
    grid-row: 2 / 3;
    padding: 1rem;
    display: flex;
    flex-direction: row;
    align-items: flex-end;
    justify-content: space-between;
    align-self: flex-end;
  }

  .tilbud {
    padding-top: 2rem;
    justify-self: center;
        grid-column: 1 / 3;
    grid-row: 1 / 2;
    font-family: switzer;
    color: white;
  }

  .tekst {
    font-family: switzer;
    color: white;
  }


h4 {
  font-size: 26px;
}

p {
  font-size: 16px;
}
}
</style>